<!DOCTYPE html>
<html data-lt-installed="true" lang="en">
<head>
  <title><%= title %></title>
  <meta name="description" content="">
  %= include '_standard_header'
</head>
<body>

<style>
header {
    width: 100%;
    position: absolute;
    z-index: 333;
    left: 0;
    top: 0;
    padding: 38px 0;
}

header .row {
    margin: 0 auto;
    max-width: 1330px;
    width: 100%;
    padding: 0 20px;
}

header nav {
    background-color: #B6D3E3;
}

.main-box {
    background-position: center top;
    background-repeat: no-repeat;
    background-color: #189AB4;
    position: relative;
    color: white;
    text-align: center;
    min-height: 650px;
}

.main-box .box {
    width: 100%;
    font-size: 16px;
    padding-top: 250px;
}

.box {
    display: flow-root !important;
    position: relative;
}

.main-box .box h1 {
    color: white;
    font-size: 60px;
    font-weight: 800;
    margin: 0 0 30px;
    letter-spacing: -1px;
    line-height: 75px;
    text-align: center;
}

#logo {
	position: absolute;
	background: white;
	left: 20px;
    top: 120px;
	padding: 10px;
}

</style>

<!-- Thao's favorit blue colors: #DAEBF4 B6D3E3 3AG275 004154 003044 -->

<header>
  <div class="row">
    <nav class="navbar navbar-expand-lg sticky-top">
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <!--a class="nav-link active" href="/"><i class="fa-solid fa-house"></i>&nbsp; Home</a -->
        </li>
        </ul>
      </div>
      <form class="d-flex" method="GET" action="/set" >
        <select name="language" class="form-select" onChange="submit()">
% my $iflang = $c->language;
% foreach my $lang ($c->ifLanguages) {
%    my ($code, $name) = @$lang;
        <option value="<%= $code %>" <%= $code eq $iflang ? ' selected' : '' %> ><%= $name %></option>
%}
        </select>
      </form>
      <div class="nav-item text-nowrap">
        <a class="nav-link px-3" href="/login"><i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp; sign in</a>
      </div>
    </nav>
  </div>
  <div id="logo">
    <img src="/style/open-console.png" />
  </div>
</header>

<section class="main-box">
  <div class="row">
    <div class="box" navbar-brand>
      <h1>Open Console</h1>
      <p>Put here our slogan</p>
	  <a class="btn btn-primary" role="button" href="/login/register">Try Open Console</a>
    </div>
  </div>
</section>

<div class="container-fluid">
  <main class="col-12">

<br />
<%= notifications() %>
<%= content %>

  </main>
</div>

</body>
</html>
